        }
        function Search() {
            txt = document.getElementById('search')
            text = txt.value
            if (text != '') {
                DataSearch()
            } else {
                Select()
            }
        }
        Select()
        function Select() {
            let output = ''
            fetch('http://localhost:7000/users')
                .then(res => res.json().then((data) => {
                    if (data.length > 0) {
                        data.forEach((user) => {
                            output += `
                        <div class="col-md-4 my-1">
                            <div class="card">
                                <div class="card-header">
                                    ${user.username}
                                </div>
                                <div class="card-body">
                                    <p><b>Email: </b> ${user.email}</p>
                                    <a href="edit/?${user._id}" class="btn btn-sm btn-warning">Ready more</a>
                                </div>
                                </div>
                            </div>
                            `
                        })
                    } else {
                        output = "<p class='alert alert-danger'>There is no data registered</p>"
                    }
                    document.getElementById('result').innerHTML = output
                }))
                .catch(err => console.log(err))
        }
